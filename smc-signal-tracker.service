[Unit]
Description=TradingExpert Signal Tracker Service
After=network.target

[Service]
Type=simple
User=evans
WorkingDirectory=/home/evans/Projects/TradingExpert/smc-scalp-signals
Environment="PYTHONPATH=/home/evans/Projects/TradingExpert/smc-scalp-signals"
ExecStart=/home/evans/Projects/TradingExpert/smc-scalp-signals/venv/bin/python /home/evans/Projects/TradingExpert/smc-scalp-signals/signal_tracker.py
Restart=always
RestartSec=30

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=smc-tracker

[Install]
WantedBy=multi-user.target
